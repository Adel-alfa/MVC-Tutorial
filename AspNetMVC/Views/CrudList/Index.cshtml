@model IEnumerable<AspNetMVC.Models.Student>

@{
    ViewBag.Title = "CRUD List";
}

<h2>Student List</h2>

<p>
    @Html.ActionLink("New Student", "AddStudent",
      null, new Dictionary<string, object>
      { { "data-toggle", "tooltip" },
          { "data-placement", "right" },
          { "title", "Click here to add new student" } })
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.StudentId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FullName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Email)
        </th>
      
        <th>
            @Html.DisplayNameFor(model => model.IsEnrol)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.StudentId)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.FullName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Email)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.IsEnrol)
        </td>
        <td>
            @Html.ActionLink("Edit", "UpdateStudent", new { id=item.StudentId }) |
            @Html.ActionLink("Details", "StudentDetails", new { id=item.StudentId }) |
            @Html.ActionLink("Delete", "DeleteStudent", new { id=item.StudentId })
        </td>
    </tr>
}

</table>

<div>
    @Html.ActionLink("Back to the tutorial home page", "Index", "Tutorial")
</div>